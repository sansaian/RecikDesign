<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#99d653"
        android:scaleType="center"
        android:layout_above="@+id/onOffButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp">
    </ImageView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/imageView"
        android:id="@+id/tableLayout"
        android:layout_alignTop="@+id/imageView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Температура в доме"
                    android:id="@+id/textView31"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textShowTemper"
                    android:layout_alignLeft="@+id/textShowTemper" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="0"
                    android:id="@+id/textShowTemper"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="За окном"
                    android:id="@+id/textView30"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView33" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="0"
                    android:id="@+id/textView33"
                    android:layout_below="@+id/textView30"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Уровень CO2"
                    android:id="@+id/textView34"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_above="@+id/textShowCO2"
                    android:layout_alignStart="@+id/textShowCO2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="0"
                    android:id="@+id/textShowCO2"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Уровень CO"
                    android:id="@+id/textView35"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textShowCO"
                    android:layout_alignStart="@+id/textShowCO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="@string/_0"
                    android:id="@+id/textShowCO"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Влажность"
                    android:id="@+id/textView38"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textStyle="bold"
                    android:id="@+id/textShowHumidity"
                    android:layout_below="@+id/textView38"
                    android:layout_alignLeft="@+id/textView38"
                    android:layout_alignStart="@+id/textView38" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Атм. давление"
                    android:id="@+id/textView39"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textStyle="bold"
                    android:id="@+id/textShowPressure"
                    android:layout_below="@+id/textView39"
                    android:layout_alignStart="@+id/textView39" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar5"
                    android:layout_below="@+id/textShowPressure"
                    android:layout_alignStart="@+id/textShowPressure"
                    android:progressTint="#76df8f"
                    android:progress="50" />
            </RelativeLayout>

        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/tableLayout">

    </TableRow>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/onOffButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:checked="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView"
        android:background="#d24c4c"
        android:id="@+id/linearLayout"></LinearLayout>

</RelativeLayout>